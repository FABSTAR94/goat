<form action="animals">
  <% Animal.types.each do |type| %>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="<%= type %>" name="animal_type[]" value="<%= type %>">
      <label class="form-check-label" for="<%= type %>"><%= type %></label>
    </div>
  <% end %>
  <input type="submit" value="Search">
</form>

<div class="container">
  <div class="row">
    <% @animals.each do |animal| %>
      <div class="col-4">

        <%= render "animal_card", animal: animal %>
      </div>
    <% end %>
  </div>

    <p>Booking List</p>
  <div class="row">
    <ul>
    <% @bookings.each do |booking| %>
      <div class="col-4">
        <li>Booking date: <%= booking.date %>.
        Location<%= booking.location %>.
        Booked animal: <%= booking.animal.name %></li>
      </div>
    </ul>
    <% end %>
  </div>
</div>


