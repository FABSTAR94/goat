<div class="container">

  <div class="row">

    <div class="col-11">





      <div class="row">
        <% @animals.each do |animal| %>
        <div class="col-4 pr-5">
          <%= render "animal_card", animal: animal %>
        </div>
        <% end %>
      </div>

    </div>


  </div>
</div>
      <div class="filter-form col-2 mt-5 text-center">
        <div class="container">

        <p class="text-center">Filter</p>

        <form action="animals" class="animals-filter">
          <% Animal.types.each do |type| %>
          <div class="form-check form-check-inline">
            <input class=" form-check-input" type="checkbox" id="<%= type %>" name="animal_type[]" value="<%= type %>">
            <label class="my-1 form-check-label" for="<%= type %>"><%= type.upcase %></label>
          </div>
          <% end %>
          <input type="submit" class=" mt-3 btn btn-primary btn-search-animals" value="Search">
        </form>
      </div>
      </div>
