<div class= "sf">
<%= form_for([animal, booking], html: { autocomplete: 'off' }) do |f| %>
<div class="form-group">
  <%= f.label :date, "Date:" %>
  <%= f.date_field :date, as: :string, required: true, class: "datepicker form-control mb-3" %>

      <p class='animal-price'>
        <span class="font-weight-bold">Price:</span><%= @animal.price %>
      </p>

  <%= f.submit   'Confirm', class: "btn btn-primary btn-search-animals"%>
<% end %>
</div>
</div>
